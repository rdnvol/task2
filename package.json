{
  "name": "levain",
  "version": "1.0.0",
  "private": true,
  "description": "Levain build tasks and dependencies.",
  "main": "app.js",
  "author": "WS",
  "license": "ISC",
  "sasslintConfig": ".",
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "css": "node-sass src/styles/theme.scss | postcss -u autoprefixer | cleancss -O1 optimizeFontWeight:off --skip-rebase -o ./src/assets/theme.css.liquid",
    "js": "webpack --progress",
    "js:css": "npm run js && npm run css",
    "test": "node -r ./webpack.config.js && js:css",
    "watch:css": "onchange 'src/styles/**/*.scss' -- npm run css",
    "watch:css:windows": "onchange \"styles/**/*.scss\" -- npm run css",
    "watch:js:dev": "webpack --mode=development --progress --watch ",
    "watch:theme:dev": "NODE_ENV=development cd ./src && theme watch --vars='../.env'",
    "watch:theme:prod": "cd ./src && theme watch --vars='../.env'",
    "watch:all:dev": "npm-run-all -p watch:css watch:js:dev watch:theme:dev",
    "replace:theme:dev": "npm run js:css && cd ../ && theme deploy --env=development",
    "watch:js:prod": "webpack --mode=production --progress --watch",
    "watch:all:prod": "npm-run-all -p watch:css watch:js:prod watch:theme:prod",
    "watch:all:prod:windows": "npm-run-all -p watch:css:windows watch:js:prod watch:theme:prod",
    "replace:theme:prod": "npm run js:css && cd ./src && theme deploy --env=production",
    "netlify:dev": "netlify dev",
    "netlify:prod": "netlify deploy --prod --dir=."
  },
  "dependencies": {
    "@shopify/theme-sections": "^3.0.3",
    "axios": "^0.19.0",
    "browser-sync": "^2.26.7",
    "dotenv": "^8.2.0",
    "final-form": "^4.18.5",
    "flatpickr": "^4.6.3",
    "google-spreadsheet": "^2.0.8",
    "jquery": "^3.0.0",
    "js-cookie": "^2.2.1",
    "modernizr": "^3.6.0",
    "moment": "^2.24.0",
    "objectFitPolyfill": "^2.3.0",
    "picturefill": "^3.0.2",
    "swiper": "^4.3.5",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "velocity-animate": "^1.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^6.7.2",
    "babel-loader": "^8.0.5",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-css-cli": "^4.0.12",
    "exports-loader": "^0.6.4",
    "imports-loader": "^0.7.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
