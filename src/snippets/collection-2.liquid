{% liquid
    assign limit = settings.limit
    assign products = collection.products
    assign sort_by = collection.sort_by | default: collection.default_sort_by
    if collection.url
      assign results_url = collection.url
    else 
      assign terms = collection.terms | escape
      assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
    endif
  
    render 'page-hero', image: collection.image
    render 'breadcrumbs'
  %}
  
  {% paginate collection.products by limit %}
    <div class="section page-section"
         data-section-id="{{ section.id }}"
         data-section-type="collection"
         data-infinite="{{ section.settings.enable_infinite }}"
         data-products-quantity="{{ collection.products_count }}">
      <div class="container">
        <div class="page-title-block text-center pt-0">
          <h1 class="h2 mb-2">{{ collection.title }}</h1>
          {% if collection.description != blank %}
            <div class="rte body-medium">
              {{ collection.description }}
            </div>
          {% endif %}
        </div>
        {% if products.size == 0 %}
          <div class="text-center py-5">
            {{ 'collections.general.no_matches' | t }}
          </div>
        {% else %}
        <div class="hidden lg:flex lg:items-center lg:space-x-8">
          {% if section.settings.enable_filtering %}
            <div class="lg:w-3/12">
              Filter by
            </div>
          {% endif %}
          <div class="lg:w-9/12">
            <div class="lg:flex lg:justify-between lg:items-center lg:space-x-8">
              {% if section.settings.enable_filtering %}
                <div id="ProductCountDesktop" class="lg:w-4/12">
                  {%- if collection.results_count -%}
                    {{ 'templates.search.results_with_count' | t: terms: collection.terms, count: collection.results_count }}
                  {%- elsif collection.products_count == collection.all_products_count -%}
                    {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                  {%- else -%}
                    {{ 'products.facets.product_count' | t: product_count: collection.products_count, count: collection.all_products_count }}
                  {%- endif -%}
                </div>
              {% endif %}
              {% if section.settings.enable_sorting %}
                <div class="lg:w-4/12 pl-5">
                  <label class="label" for="filter-sortby-2">Sort by</label>
                  <div class="select-holder">
                    {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}
                    <select name="sort_by" id="filter-sortby-2" aria-describedby="a11y-refresh-page-message" form="FacetFiltersForm">
                      {%- for option in collection.sort_options -%}
                        <option value="{{ option.value | escape }}"{% if option.value == sort_by %} selected="selected"{% endif %}>{{ option.name | escape }}</option>
                      {%- endfor -%}
                    </select>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="py-4 lg:py-5 lg:flex lg:space-x-8">
          {% if section.settings.enable_filtering %}
            <div class="filter lg:w-3/12">
              <div class="filter__main-btn-holder flex items-center mb-4">
                <div class="w-7/12 lg:w-100">
                  <div class="filter-main-open-close">
                    <button class="default filter-main-open-close__btn-opener filter-main-open-close__opener page-wrapper__opener flex items-center lg:hidden body-large">
                      <span class="filter-main-open-close__btn-opener-icon mr-2">
                        {% render 'icon' with 'filter' %}
                      </span>
                      Filter and sort
                    </button>
                    <div class="filter-main-open-close__slide flex justify-between flex-col lg:block" style="display: none;">
    
                      <div class="filter-main-open-close__slide-btn-holder lg:hidden flex-shrink-0 w-100">
                        <button class="filter-main-open-close__opener filter-main-open-close__closer page-wrapper__opener flex items-center body-medium">
                          <span class="btn-closer flex-shrink-0 mr-1">
                            <span class="visually-hidden">
                              Icon close
                            </span>
                          </span>
                          Close
                        </button>
                      </div>
                      <div class="filter-main-open-close__holder">
                        <div class="px-4 lg:px-0">
                          {% if section.settings.enable_sorting %}
                            <div class="lg:hidden py-4">
                              <label class="label" for="filter-sortby">Sort by</label>
                              <div class="select-holder">
                                {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}
                                <select name="sort_by" id="filter-sortby" aria-describedby="a11y-refresh-page-message" form="FacetFiltersForm"> 
                                  {%- for option in collection.sort_options -%}
                                    <option value="{{ option.value | escape }}"{% if option.value == sort_by %} selected="selected"{% endif %}>{{ option.name | escape }}</option>
                                  {%- endfor -%}
                                </select>
                              </div>
                            </div>
                          {% endif %}
                          <facet-filters-form>
                            <form id="FacetFiltersForm" class="facets__form">
                              {%- if collection.terms -%}
                                <input type="hidden" name="q" value="{{ results.terms | escape }}">
                                <input name="options[prefix]" type="hidden" value="last">
                              {%- endif -%}
                              <div id="FacetsWrapperDesktop" class="facets__wrapper">
                                {% for filter in collection.filters %}
                                  {% case filter.label %}
                                    {% when "Color" %}
                                      <div class="filter-collapse">
                                        <!-- <details-disclosure> -->
                                          <details class="filter-collapse__item js-filter" data-index="{{ forloop.index }}">
                                            <summary class="py-3 flex justify-between items-center">
                                              {{ filter.label }}
                                              <span class="filter-collapse__btn flex-shrink-0 mx-4"></span>
                                            </summary>
                                            {% if filter.values.size > 0 %}
                                              {% for value in filter.values %}
                                                {% unless forloop.index > 5 %}
                                                  <div class="py-3 custom-input custom-input--colors-with-text">
                                                    <input id="Filter-{{ value.param_name }}--{{ forloop.index }}" 
                                                           type="checkbox"   
                                                           name="{{ value.param_name }}"
                                                           value="{{ value.value }}"
                                                           {% if value.active %}
                                                            checked
                                                           {% endif %}
                                                           {% if value.count == 0 and value.active == false %}
                                                            disabled
                                                           {% endif %}
                                                           >
                                                    <label for="Filter-{{ value.param_name }}--{{ forloop.index }}" class="custom-label flex items-center">
                                                        <span class="custom-label__img-holder">
                                                          <div style="background-color: {{ value.value }}; width: 100%; height: 100%; border-radius: 50%;" >
                                                          </div>
                                                          <!-- {% render
                                                            'image',
                                                            asset_img_url: true,
                                                            src: 'img-placeholder.png',
                                                            d: '20x20',
                                                            placeholder: 'img-placeholder.png',
                                                          %} -->
                                                        </span>
                                                        {{ value.label }} ({{ value.count }})
                                                    </label>
                                                 </div>
                                                {% endunless %}
                                              {% endfor %}
                                            {% endif %}
                                            {% if filter.values.size >= 5 %}
                                              <more-less class="filter-collapse__btn-more-content mb-3">
                                                <span id="more" class="filter-collapse__more">+ More</span>
                                                <span id="less" class="filter-collapse__less">- Less</span>
  
                                                <script id="filter-items" data-template="1" type="application/json">
                                                  {
                                                    "filter_label": {{ filter.label | json }},
                                                    "filter_type": {{ filter.type | json }},
                                                    "filter_values": [
                                                      {% for value in filter.values %}
                                                        {
                                                          "active": {{ value.active | json }},
                                                          "count": {{ value.count | json }},
                                                          "label": {{ value.label | json }},
                                                          "param_name": {{ value.param_name | json }},
                                                          "value": {{ value.value | json }}
                                                        }
                                                      {% unless forloop.last %}
                                                        ,
                                                      {% endunless %}
                                                      {% endfor %}
                                                    ]
                                                  }
                                                </script>
                                              </more-less>
                                            {% endif %}
                                          </details>
                                        <!-- </details-disclosure> -->
                                      </div>
                                    {% when "Price" %}
                                      {% liquid
                                        assign currencies_using_comma_decimals = 'ANG,ARS,BRL,BYN,BYR,CLF,CLP,COP,CRC,CZK,DKK,EUR,HRK,HUF,IDR,ISK,MZN,NOK,PLN,RON,RUB,SEK,TRY,UYU,VES,VND' | split: ','
                                        assign uses_comma_decimals = false
                                        if currencies_using_comma_decimals contains cart.currency.iso_code
                                          assign uses_comma_decimals = true
                                        endif
                                      %}
                                      <div class="filter-collapse">
                                        <details class="filter-collapse__item js-filter" data-index="{{ forloop.index }}">
                                          <summary class="py-3 flex justify-between items-center">
                                            {{ filter.label }}
                                            <span class="filter-collapse__btn flex-shrink-0 mx-4"></span>
                                          </summary>
                                          <div class="mb-4">
                                            <div class="flex items-center">
                                              <price-range class="facets__price">
                                                <div class="relative">
                                                  <span class="range-slider__suffix body-medium">{{ cart.currency.symbol }}</span>
                                                  <label for="Filter-{{ filter.min_value.param_name }}" class="visually-hidden">
                                                    Range slider minimum value
                                                  </label>
                                                  <input 
                                                    type="number" 
                                                    class="range-slider__input text-right w-100" 
                                                    inputmode="numeric" 
                                                    name="{{ filter.min_value.param_name }}" 
                                                    id="Filter-{{ filter.min_value.param_name }}" 
                                                    min="0" 
                                                    max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"  
                                                    {% if filter.min_value.value -%}
                                                    value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}"
                                                    {%- endif %}>
                                                </div>
                                                <div class="mx-4 flex-shrink-0">
                                                  to
                                                </div>
                                                <div class="relative">
                                                  <span class="range-slider__suffix body-medium base-secondary-text-color absolute top-2 left-3">{{ cart.currency.symbol }}</span>
                                                  <label for="Filter-{{ filter.max_value.param_name }}" class="visually-hidden">
                                                    Range slider maximum value
                                                  </label>
                                                  <input 
                                                    type="number" 
                                                    class="range-slider__input text-right" 
                                                    inputmode="numeric" 
                                                    name="{{ filter.max_value.param_name }}" 
                                                    id="Filter-{{ filter.max_value.param_name }}" 
                                                    {% if filter.max_value.value -%}
                                                    value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}"
                                                    {%- endif %}
                                                    min="0"
                                                    max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                                                  >
                                                </div>
                                              </price-range>
                                            </div>
                                          </div>
                                        </details>
                                      </div>
                                    {% when "Size" %}
                                      <div class="filter-collapse">
                                        <details class="filter-collapse__item js-filter" data-index="{{ forloop.index }}">
                                          <summary class="py-3 flex justify-between items-center">
                                            {{ filter.label }}
                                            <span class="filter-collapse__btn flex-shrink-0 mx-4"></span>
                                          </summary>
                                          {% for value in filter.values %}
                                            {% unless forloop.index > 5 %}
                                              <div class="py-3 custom-input custom-input--square-with-text">
                                                <input 
                                                  id="Filter-{{ value.param_name }}-{{ forloop.index }}" 
                                                  type="checkbox" 
                                                  name="{{ value.param_name }}" 
                                                  value="{{ value.value }}"
                                                  {% if value.active -%}
                                                  checked
                                                  {%- endif %}
                                                  {% if value.count == 0 and value.active == false -%}
                                                  disabled
                                                  {%- endif %}
                                                >
                                                <label for="Filter-{{ value.param_name }}-{{ forloop.index }}" class="custom-label flex items-center">
                                                  <span class="custom-label__check"></span>
                                                  {{ value.label }} ({{ value.count }})
                                                </label>
                                              </div>
                                            {% endunless %}
                                          {% endfor %}
                                          {% if filter.values.size >= 5 %}
                                            <more-less class="filter-collapse__btn-more-content mb-3">
                                              <span id="more" class="filter-collapse__more">+ More</span>
                                              <span id="less" class="filter-collapse__less">- Less</span>
    
                                              <script id="filter-items" data-template="1" type="application/json">
                                                {
                                                  "filter_label": {{ filter.label | json }},
                                                  "filter_type": {{ filter.type | json }},
                                                  "filter_values": [
                                                    {% for value in filter.values %}
                                                      {
                                                        "active": {{ value.active | json }},
                                                        "count": {{ value.count | json }},
                                                        "label": {{ value.label | json }},
                                                        "param_name": {{ value.param_name | json }},
                                                        "value": {{ value.value | json }}
                                                      }
                                                    {% unless forloop.last %}
                                                      ,
                                                    {% endunless %}
                                                    {% endfor %}
                                                  ]
                                                }
                                              </script>
                                            </more-less>
                                          {% endif %}
                                        </details>
                                      </div>
                                    {% when "Brand" %}
                                      <div class="filter-collapse">
                                        <details class="filter-collapse__item js-filter" data-index="{{ forloop.index }}">
                                          <summary class="py-3 flex justify-between items-center">
                                            {{ filter.label }}
                                            <span class="filter-collapse__btn flex-shrink-0 mx-4"></span>
                                          </summary>
                                          {% for value in filter.values %}
                                            {% unless forloop.index > 5 %}
                                              <div class="py-3 custom-input custom-input--square-with-text">
                                                <input 
                                                  id="Filter-{{ value.param_name }}-{{ forloop.index }}" 
                                                  type="checkbox" 
                                                  name="{{ value.param_name }}" 
                                                  value="{{ value.value }}"
                                                  {% if value.active %}checked{% endif %} 
                                                  {% if value.count == 0 and value.active == false %}
                                                  disabled
                                                  {% endif %}
                                                >
                                                <label for="Filter-{{ value.param_name }}-{{ forloop.index }}" class="custom-label flex items-center">
                                                  <span class="custom-label__check"></span>
                                                  {{ value.label }} ({{ value.count }})
                                                </label>
                                              </div>
                                            {% endunless %}
                                          {% endfor %}
                                          {% if filter.values.size >= 5 %}
                                            <more-less class="filter-collapse__btn-more-content mb-3">
                                              <span id="more" class="filter-collapse__more">+ More</span>
                                              <span id="less" class="filter-collapse__less">- Less</span>
    
                                              <script id="filter-items" data-template="1" type="application/json">
                                                {
                                                  "filter_label": {{ filter.label | json }},
                                                  "filter_type": {{ filter.type | json }},
                                                  "filter_values": [
                                                    {% for value in filter.values %}
                                                      {
                                                        "active": {{ value.active | json }},
                                                        "count": {{ value.count | json }},
                                                        "label": {{ value.label | json }},
                                                        "param_name": {{ value.param_name | json }},
                                                        "value": {{ value.value | json }}
                                                      }
                                                    {% unless forloop.last %}
                                                      ,
                                                    {% endunless %}
                                                    {% endfor %}
                                                  ]
                                                }
                                              </script>
                                            </more-less>
                                          {% endif %}
                                        </details>
                                      </div>
                                    {% when "Availability" %}
                                      <div class="filter-collapse">
                                          <details class="filter-collapse__item js-filter" data-index="{{ forloop.index }}">
                                            <summary class="py-3 flex justify-between items-center">
                                              {{ filter.label }}
                                              <span class="filter-collapse__btn flex-shrink-0 mx-4"></span>
                                            </summary>
                                            {% for value in filter.values %}
                                              {% unless forloop.index > 5 %}
                                                <div class="py-3 custom-input custom-input--square-with-text">
                                                  <input 
                                                    id="Filter-{{ value.param_name }}-{{ forloop.index }}" 
                                                    type="checkbox" 
                                                    value="{{ value.value }}"
                                                    name="{{ value.param_name }}"
                                                    {% if value.active -%}
                                                    checked
                                                    {%- endif %}
                                                    {% if value.count == 0 and value.active == false -%}
                                                    disabled
                                                    {%- endif %}
                                                  >
                                                  <label for="Filter-{{ value.param_name }}-{{ forloop.index }}" class="custom-label flex items-center">
                                                    <span class="custom-label__check"></span>
                                                    {{ value.label }} ({{ value.count }})
                                                  </label>
                                                </div>
                                              {% endunless %}
                                            {% endfor %}
                                          </details>
                                      </div> 
                                    {% when "Product type" %}
                                      <div class="filter-collapse">
                                          <details class="filter-collapse__item js-filter" data-index="{{ forloop.index }}">
                                            <summary class="py-3 flex justify-between items-center">
                                              {{ filter.label }}
                                              <span class="filter-collapse__btn flex-shrink-0 mx-4"></span>
                                            </summary>
                                            {% for value in filter.values %}
                                              {% unless forloop.index > 5 %}
                                                <div class="py-3 custom-input custom-input--square-with-text">
                                                  <input 
                                                    id="Filter-{{ value.param_name }}-{{ forloop.index }}" 
                                                    type="checkbox" 
                                                    value="{{ value.value }}"
                                                    name="{{ value.param_name }}"
                                                    {% if value.active -%}
                                                    checked
                                                    {%- endif %}
                                                    {% if value.count == 0 and value.active == false -%}
                                                    disabled
                                                    {%- endif %}
                                                  >
                                                  <label for="Filter-{{ value.param_name }}-{{ forloop.index }}" class="custom-label flex items-center">
                                                    <span class="custom-label__check"></span>
                                                    {{ value.label }} ({{ value.count }})
                                                  </label>
                                                </div>
                                              {% endunless %}
                                            {% endfor %}
                                            {% if filter.values.size >= 5 %}
                                            <more-less class="filter-collapse__btn-more-content mb-3">
                                              <span id="more" class="filter-collapse__more">+ More</span>
                                              <span id="less" class="filter-collapse__less">- Less</span>
    
                                              <script id="filter-items" data-template="1" type="application/json">
                                                {
                                                  "filter_label": {{ filter.label | json }},
                                                  "filter_type": {{ filter.type | json }},
                                                  "filter_values": [
                                                    {% for value in filter.values %}
                                                      {
                                                        "active": {{ value.active | json }},
                                                        "count": {{ value.count | json }},
                                                        "label": {{ value.label | json }},
                                                        "param_name": {{ value.param_name | json }},
                                                        "value": {{ value.value | json }}
                                                      }
                                                    {% unless forloop.last %}
                                                      ,
                                                    {% endunless %}
                                                    {% endfor %}
                                                  ]
                                                }
                                              </script>
                                            </more-less>
                                          {% endif %}
                                          </details>
                                      </div>    
                                  {% endcase %}
                                {% endfor %}
                              </div>
                              <div class="active-filters">
                                <facet-remove>
                                  <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}" class="active-filters__clear">Clear all</a>
                                </facet-remove>
                                {%- for filter in collection.filters -%}
                                  {%- if filter.type == "price_range" -%}
                                    {%- if filter.min_value.value != nil or filter.max_value.value != nil -%}
                                      <facet-remove>
                                        <a class="active-filters__remove-filter" href="{{ filter.url_to_remove }}">
                                          {%- assign min_value = filter.min_value.value | default: 0 -%}
                                          {%- assign max_value = filter.max_value.value | default: filter.range_max -%}
                                          {{ min_value | money }} - {{ max_value | money }} X
                                        </a>
                                      </facet-remove>
                                    {%- endif -%}
                                  {%- else -%}
                                    {%- for filter_value in filter.active_values -%}
                                      <facet-remove>
                                        <a class="active-filters__remove-filter" href="{{ filter_value.url_to_remove }}">
                                          {{ filter_value.label }} X
                                        </a>
                                      </facet-remove>
                                    {%- endfor -%}
                                  {%- endif- %}
                                {%- endfor -%}
                              </div>
                            </form>
                          </facet-filters-form>
                        </div>
                      </div>
                      <div class="lg:hidden flex-shrink-0 px-4 py-5">
                        {% render
                          'button',
                          element: 'button',
                          type: 'button',
                          class: 'w-100',
                          text: 'Apply',
                        %}
                      </div>
                    </div>
                    <div class="filter-main-open-close__opener filter-main-open-close__overlay page-wrapper__opener lg:hidden">
                      <span class="visually-hidden">
                        Closer filter drawer
                      </span>
                    </div>
                  </div>
                </div>
                <div id="ProductCount" class="w-5/12 lg:hidden text-right">
                  {%- if collection.results_count -%}
                    {{ 'templates.search.results_with_count' | t: terms: collection.terms, count: collection.results_count }}
                  {%- elsif collection.products_count == collection.all_products_count -%}
                    {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                  {%- else -%}
                    {{ 'products.facets.product_count' | t: product_count: collection.products_count, count: collection.all_products_count }}
                  {%- endif -%}
                </div>
              </div>
            </div> 
          {% endif %}
          <div class="lg:w-9/12">
            {% if section.settings.enable_filtering %}
              <div class="filter-selected-element-list flex flex-wrap items-center pb-4 lg:pb-0 -mx-2">
                <facet-remove>
                  <a id="clear-all" href="{{ results_url }}" class="button filter__btn-reset mx-2 mb-3" type="button">
                    Clear all
                  </a>
                </facet-remove>
                {% for filter in collection.filters %}
                  {% for value in filter.active_values %}
                    <facet-remove>
                      <a href="{{ value.url_to_remove }}">
                        <div class="filter-selected-element-list__item relative flex items-center justify-center py-1 px-3 mb-3 mx-2">
                          {{ value.label | escape }}
                          <button class="btn-closer ml-3">
                            <span class="visually-hidden">
                              Clear {{ value.label }} filter results
                            </span>
                          </button>
                        </div>
                      </a>
                    </facet-remove>
                  {% endfor %}
                  {% if filter.type == "price_range" %}
                    {%- if filter.min_value.value != nil or filter.max_value.value != nil -%}
                      <facet-remove>
                        <a href="{{ filter.url_to_remove }}" id="price-range">
                          <div class="filter-selected-element-list__item relative flex items-center justify-center py-1 px-3 mb-3 mx-2">
                            {%- if filter.min_value.value -%}{{ filter.min_value.value | money }}{%- else -%}{{ 0 | money }}{%- endif -%}-{%- if filter.max_value.value -%}{{ filter.max_value.value | money }}{%- else -%}{{ filter.range_max | money }}{%- endif -%}
                            <!-- $50.00 - $90.00 -->
                            <button class="btn-closer ml-3">
                              <span class="visually-hidden">
                                Clear {$50.00 - $90.00} filter results
                              </span>
                            </button>
                          </div>
                        </a>
                      </facet-remove>
                    {% endif %}
                  {% endif %}
                {% endfor %}
                <!-- <div class="filter-selected-element-list__item relative flex items-center justify-center py-1 px-3 mb-3 mx-2">
                  Black
                  <button class="btn-closer ml-3">
                    <span class="visually-hidden">
                      Clear {Black} filter results
                    </span>
                  </button>
                </div>
                <div class="filter-selected-element-list__item relative flex items-center justify-center py-1 px-3 mb-3 mx-2">
                  Top
                  <button class="btn-closer ml-3">
                    <span class="visually-hidden">
                      Clear {Top} filter results
                    </span>
                  </button>
                </div> -->
                <!-- <div class="filter-selected-element-list__item relative flex items-center justify-center py-1 px-3 mb-3 mx-2">
                  $50.00 - $90.00
                  <button class="btn-closer ml-3">
                    <span class="visually-hidden">
                      Clear {$50.00 - $90.00} filter results
                    </span>
                  </button>
                </div> -->
              </div>
            {% endif %}
            <div id="product-grid" class="grid grid-cols-2 xl:grid-cols-3 gap-x-8 js-products-wrapper" data-id="{{ section.id }}">
              {% liquid
                for product in collection.products
                  render "product-card", product: product, grid_item_width: ''
                endfor
              %}
            </div>
          </div>
        </div>
        {% endif %}
        {% if section.settings.enable_infinite %}
          <div class="spinner-holder">
            <div class="spinner"></div>
          </div>
        {% else %}
          <div id="pagination-container">
            {% if paginate.pages > 1 %}
              {% render 'pagination', paginate: paginate %}
