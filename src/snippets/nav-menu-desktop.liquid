{% for link in linklists[section.settings.menu].links %}
  {% if link.links != blank %}
    <li class="has-drop">
      <details-disclosure>
        <details>
          <summary class="menu-accordion__opener">
            {{ link.title }}
          </summary>
          <div class="menu-accordion__slide">
            <div class="container">
              <div class="lg:flex lg:space-x-8">
                {% for child_link in link.links %}
                  <div class="lg:w-3/12">
                    <div class="h5 h">{{ child_link.title }}</div>
                    {% if child_link.links != blank %}
                      <ul>
                        {% for third_level in child_link.links %}
                          <li
                            {% if third_level.active %}
                              class="active"
                            {% endif %}
                          >
                            <a href="{{ third_level.url }}">{{ third_level.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </details>
      </details-disclosure>
    </li>
  {% else %}
    <li
      {% if link.active %}
        class="active"
      {% endif %}
    >
      <a href="{{ link.url }}">{{ link.title }}</a>
    </li>
  {% endif %}
{% endfor %}
