<!-- /snippets/social-sharing.liquid -->
<ul class="social-sharing">
  <li>
    {{ 'general.social.share' | t }}
  </li>
  <li>
    {% if settings.share_facebook %}
      <a
        target="_blank"
        href="//www.facebook.com/sharer.php?u={{ routes.root_url | append: share_permalink }}"
        rel="noopener"
      >
        {% render 'icon-facebook' %}
        <span class="accessibility" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
        <span class="accessibility">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
      </a>
    {% endif %}
  </li>
  <li>
    {% if settings.share_twitter %}
      <a
        target="_blank"
        href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}"
        rel="noopener"
      >
        {% render 'icon-twitter' %}
        <span class="accessibility" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
        <span class="accessibility">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
      </a>
    {% endif %}
  </li>
  <li>
    {% if settings.share_pinterest %}
      <a
        target="_blank"
        href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}"
        rel="noopener"
      >
        {% render 'icon-pinterest' %}
        <span class="accessibility" aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
        <span class="accessibility">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
      </a>
    {% endif %}
  </li>
</ul>
