<style>

  {% if settings.font_library == 'shopify' %}
    {{ settings.font_heading | font_face }}
    {{ settings.font_body | font_face }}

    {%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
    {%- assign font_body_italic = settings.font_body | font_modify: 'style', 'italic' -%}
    {%- assign font_heading_bold = settings.font_heading | font_modify: 'weight', 'bolder' -%}

    {{ font_body_bold | font_face }}
    {{ font_heading_bold | font_face }}
    {{ font_body_italic | font_face }}
  {% endif %}

  :root {
    --color-accent: {{ settings.color_accent }};
    --color-body-text: {{ settings.color_body_text }};
    --color-main-background: {{ settings.color_main_bg }};
    --color-border: {{ settings.color_body_text | color_lighten: 50 }};
    --base-footer-background: #f8f8f8;
    --base-accordion-background: #f1f1f1;
    --base-links: #0f62fe;
    --base-sale-price: #f00036;
    --base-icons: #000;
    --base-icons-on-hover: #333;
    --base-secondary-background: #f1f1f1;
    --base-border: #999;

    /* Messages */
    --messages-error: #da1d28;
    --messages-success: #27ae60;

    /* Customizable */
    --customizable-base-text: #fff;

    /* Font library */
    {%- case settings.font_library -%}
      {%- when 'shopify' -%}
        --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
        --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
        --font-body-weight: {{ settings.font_body.weight }};
        --font-heading-weight: {{ settings.font_heading.weight }};
        --font-body-style: {{ settings.font_body.style }};
        --font-heading-style: {{ settings.font_heading.style }};
      {%- when 'google' -%}
        --font-heading: '{{ settings.google_font_heading }}', 'Times New Roman', 'Times', 'Baskerville', 'Georgia', serif;
        --font-body: '{{ settings.google_font_body }}', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;
        --font-body-weight: {{ settings.google_body_weight }};
        --font-heading-weight: {{ settings.google_heading_weight }};
        --font-body-style: {{ settings.google_body_style }};
        --font-heading-style: {{ settings.google_heading_style }};
      {%- when 'custom' -%}
        --font-heading: '{{ settings.custom_font_heading }}', 'Times New Roman', 'Times', 'Baskerville', 'Georgia', serif;
        --font-body: '{{ settings.custom_font_body }}', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;
        --font-body-weight: {{ settings.custom_body_weight }};
        --font-heading-weight: {{ settings.custom_heading_weight }};
        --font-body-style: {{ settings.custom_body_style }};
        --font-heading-style: {{ settings.custom_heading_style }};
      {%- when 'hardcoded' -%}
        --font-heading: 'Didot', 'Times New Roman', 'Times', 'Baskerville', 'Georgia', serif;
        --font-body: 'Neutraface', 'Arial', 'Helvetica Neue', 'Helvetica', sans-serif;
        --font-body-weight: {{ settings.hardcoded_body_weight }};
        --font-heading-weight: {{ settings.hardcoded_heading_weight }};
        --font-body-style: normal;
        --font-heading-style: italic;
    {%- endcase -%}

    /* Base text settings */
    --font-size-base: {{ settings.font_base_size }}px;
    --heading-font-size: {{ settings.heading_base_size }}px;
    --font-body-bold-weight: {{ font_body_bold.weight | default: 'bold' }};

    /* Project variables */
    --header-logo-width: 106px;

    --button-text-color: {{ settings.button_text_color }};
    --button-hover-text-color: {{ settings.button_hover_color }};
    --button-focus-text-color: {{ settings.button_focus_text_color }};
    --button-border-color: {{ settings.button_border_color }};
    --button-hover-border-color: {{ settings.button_hover_border_color }};
    --button-focus-border-color: {{ settings.button_focus_border_color }};
    --button-background-color: {{ settings.button_bg_color }};
    --button-hover-background-color: {{ settings.button_hover_bg_color }};
    --button-focus-background-color: {{ settings.button_focus_bg_color }};
    --button-text-on-disabled: #000;
    --button-border-on-disabled: #e5e5e5;
    --button-background-on-disabled: #e5e5e5;
    --button-border-radius: {{ settings.button_border_radius }};

    /* Checkout button colors */
    --secondary-button-text-color: {{ settings.button_text_color }};
    --secondary-button-hover-text-color: {{ settings.button_hover_color }};
    --secondary-button-focus-text-color: {{ settings.button_focus_text_color }};
    --secondary-button-border-color: {{ settings.button_border_color }};
    --secondary-button-hover-border-color: {{ settings.button_hover_border_color }};
    --secondary-button-focus-border-color: {{ settings.button_focus_border_color }};
    --secondary-button-background-color: {{ settings.button_bg_color }};
    --secondary-button-hover-background-color: {{ settings.button_hover_bg_color }};
    --secondary-button-focus-background-color: {{ settings.button_focus_bg_color }};
    --secondary-button-text-on-disabled: #000;
    --secondary-button-border-on-disabled: #e5e5e5;
    --secondary-button-background-on-disabled: #e5e5e5;

    /* Checkout button colors */
    --checkout-button-text-color: {{ settings.checkout_button_text_color }};
    --checkout-button-hover-text-color: {{ settings.checkout_button_hover_color }};
    --checkout-button-focus-text-color: {{ settings.checkout_button_focus_text_color }};
    --checkout-button-background-color: {{ settings.checkout_button_bg_color }};
    --checkout-button-hover-background-color: {{ settings.checkout_button_hover_bg_color }};
    --checkout-button-focus-background-color: {{ settings.checkout_button_focus_bg_color }};
    --checkout-button-border-color: {{ settings.checkout_button_border_color }};
    --checkout-button-hover-border-color: {{ settings.checkout_button_hover_border_color }};
    --checkout-button-focus-border-color: {{ settings.checkout_button_focus_border_color }};

    {% if settings.elements_outline %}
      --elements-outline: 1px dashed;
      --color-outline: {{ settings.color_outline }}
    {% endif %}
  }
</style>
