<div class="mr-5">
  <details
    class="filter-collapse__item js-filter disclosure-has-popup relative py-3"
    data-index="{{ forloop.index }}"
  >
    <summary class="body-small flex items-center justify-between">
      {{ filter.label }}
      <span class="filter-collapse__btn-check ml-1 shrink-0"></span>
    </summary>
    <div class="filter-collapse__slide">
      <div class="filter-collapse__heading body-small flex items-center justify-between space-x-2 p-4">
        <div class="facets__selected no-js-hidden">
          {{ 'products.facets.filters_selected' | t: count: filter.active_values.size }}
        </div>
        <div>
          <facet-remove>
            <a href="{{ filter.url_to_remove }}">
              <button type="reset">{{ 'collections.filters.reset' | t }}</button>
            </a>
          </facet-remove>
        </div>
      </div>
      <div class="filter-collapse__holder">
        <div class="px-4">
          {% for value in filter.values %}
            <div class="custom-input custom-input--square-with-text py-3">
              <input
                id="Filter-{{ value.param_name }}-{{ forloop.index }}"
                type="checkbox"
                value="{{ value.value }}"
                name="{{ value.param_name }}"
                {% if value.active %}
                  checked
                {% endif %}
                {% if value.count == 0 and value.active == false -%}
                  disabled
                {% endif %}
              >
              <label
                for="Filter-{{ value.param_name }}-{{ forloop.index }}"
                class="custom-label flex items-center"
              >
                <span class="custom-label__check"></span>
                {{ value.label }} ({{ value.count }})
              </label>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </details>
</div>
