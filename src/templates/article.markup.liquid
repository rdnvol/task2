<div class="section page-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-lg-9">
        <article role="article" class="post post--single">
          <header role="banner" class="post__header">
            <h1 class="post__title">Post title</h1>
            <div class="post__date">
              <time datetime="2019-06-30">June 30 2019</time>
            </div>
            <a href="#">2 comments</a>
          </header>
          <div class="post__img">
            {% render
              'image',
              asset_img_url: true,
              src: 'img-placeholder.png',
              d: '857x',
              m: '375x',
            %}
          </div>
          <div class="post__text-block rte">
            {{ article.content }}
          </div>
          {% if settings.social_sharing_blog %}
            {% include 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
          {% endif %}
        </article>
        <div class="post__discussion">
          <h2 class="h3">Comments</h2>
          <ul>
            <li>
              <div class="post__comment rte">
                <div class="mb-3">
                  <strong>Alex Smith</strong>
                  <div>
                    on <time datetime="2019-04-14 10:39">April 14, 2019 at 10:39AM</time>
                  </div>
                </div>
                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Veniam autem animi error fuga, vitae quis.</p>
              </div>
            </li>
            <li>
              <div class="post__comment rte">
                <div class="mb-3">
                  <strong>Alex Smith</strong>
                  <div>
                    on <time datetime="2019-04-14 10:39">April 14, 2019 at 10:39AM</time>
                  </div>
                </div>
                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Veniam autem animi error fuga, vitae quis.</p>
              </div>
            </li>
          </ul>
        </div>
        {% form 'new_comment', article %}
          <h2 class="h3">{{ 'blogs.comments.title' | t }}</h2>
          {{ form.errors | default_errors }}
          <div class="row">
            <div class="col-sm-6">
              <div class="input-holder">
                <label for="CommentAuthor" class="label-hidden label">
                  {{ 'blogs.comments.name' | t }}
                </label>
                <input type="text"
                      name="comment[author]"
                      id="CommentAuthor"
                      class="{% if form.errors contains 'author' %}input-error{% endif %}"
                      placeholder="{{ 'blogs.comments.name' | t }}"
                      value="{{ form.author }}"
                      autocapitalize="words">
              </div>
            </div>
            <div class="col-sm-6">
              <div class="input-holder">
                <label for="CommentEmail" class="label-hidden label">
                  {{ 'blogs.comments.email' | t }}
                </label>
                <input type="email"
                      name="comment[email]"
                      id="CommentEmail"
                      class="{% if form.errors contains 'email' %}input-error{% endif %}"
                      placeholder="{{ 'blogs.comments.email' | t }}"
                      value="{{ form.email }}"
                      spellcheck="false"
                      autocomplete="off"
                      autocapitalize="off">
              </div>
            </div>
          </div>
          <div class="input-holder">
            <label for="CommentBody" class="label-hidden label">
              {{ 'blogs.comments.message' | t }}
            </label>
            <textarea
              name="comment[body]"
              id="CommentBody"
              class="{% if form.errors contains 'body' %}input-error{% endif %}"
              placeholder="{{ 'blogs.comments.message' | t }}">
              {{- form.body -}}
            </textarea>
          </div>
          {% if blog.moderated? %}
            <p>{{ 'blogs.comments.moderated' | t }}</p>
          {% endif %}
          <input type="submit" class="button" value="{{ 'blogs.comments.post' | t }}">
        {% endform %}
      </div>
      <div class="col-md-4 col-lg-3">
        <aside class="aside">
          <h3>Recent articles</h3>
          <div class="aside__item">
            <h4 class="mb-2">
              <a href="#">Post title</a>
            </h4>
            <div>
              <time datetime="2019-06-30">Posted on June 30, 2019</time>
            </div>
          </div>
          <div class="aside__item">
            <h4 class="mb-2">
              <a href="#">Post title</a>
            </h4>
            <div>
              <time datetime="2019-06-30">Posted on June 30, 2019</time>
            </div>
          </div>
          <h3 class="mb-3">Tags</h3>
          <div class="aside__item">
            <ul class="aside__tags-list">
              <li>
                <a href="#">all</a>
              </li>
              <li>
                <a href="#">tag 1</a>
              </li>
              <li>
                <a href="#">tag 2</a>
              </li>
              <li>
                <a href="#">tag 3</a>
              </li>
              <li>
                <a href="#">tag 4</a>
              </li>
              <li>
                <a href="#">tag 5</a>
              </li>
              <li>
                <a href="#">tag 6</a>
              </li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </div>
</div>