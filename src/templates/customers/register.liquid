<div class="section page-section" id="content" tabindex="0">
  <div class="container">
    <div class="account-page__title text-center">
      <h1 class="h2">{{ 'customer.register.title' | t }}</h1>
    </div>
    {% form 'create_customer', class: 'account-form' %}
      {{ form.errors | default_errors }}
      <div class="input-holder">
        <label for="FirstName" class="label label-hidden">
          {{ 'customer.register.first_name' | t }}
        </label>
        <input type="text"
          name="customer[first_name]"
          id="FirstName"
          placeholder="{{ 'customer.register.first_name' | t }}"
          autofocus
          {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
      </div>
      <div class="input-holder">
        <label for="LastName" class="label label-hidden">
          {{ 'customer.register.last_name' | t }}
        </label>
        <input type="text"
          name="customer[last_name]"
          id="LastName"
          placeholder="{{ 'customer.register.last_name' | t }}"
          {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
      </div>
      <div class="input-holder">
        <label for="Email" class="label label-hidden">
          {{ 'customer.register.email' | t }}
        </label>
        <input type="email"
          name="customer[email]"
          id="Email"
          class="{% if form.errors contains 'email' %}input-error{% endif %}"
          placeholder="{{ 'customer.register.email' | t }}"
          value="{% if form.email %}{{ form.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">
      </div>
      <div class="input-holder">
        <label for="CreatePassword" class="label label-hidden">
          {{ 'customer.register.password' | t }}
        </label>
        <input type="password"
          name="customer[password]"
          id="CreatePassword"
          class="{% if form.errors contains 'password' %}input-error{% endif %}"
          placeholder="{{ 'customer.register.password' | t }}">
      </div>
      <div class="input-holder">
        <input type="submit" value="{{ 'customer.register.submit' | t }}" class="button w-100">
      </div>
      <div class="text-center">
        <a href="{{ routes.root_url }}" rel="nofollow">{{ 'customer.register.cancel' | t }}</a>
      </div>
    {% endform %}
  </div>
</div>
