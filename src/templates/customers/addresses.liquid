<div class="section" id="content" tabindex="0">
  <div class="container">
    <div class="md:flex">
      <div class="md:w-10/12 xl:w-8/12 md:mx-auto">
        <div class="text-center mb-5">
          <h1 class="h4 mb-3">{{ 'customer.account.title' | t }}</h1>
          <a href="/account" class="link">{{ 'customer.account.return' | t }}</a>
        </div>
        {% paginate customer.addresses by 5 %}
          <div data-address class="pb-12">
            <div class="text-center">
              <button type="button" class="button" data-address-toggle>
                {{ 'customer.addresses.add_new' | t }}
              </button>
            </div>
            <div data-address-form class="hidden">
              {% form 'customer_address', customer.new_address, class: 'account-form account-form--address pt-10 md:py-10' %}
                <h2 class="h6 mb-6">{{ 'customer.addresses.add_new' | t }}</h2>
                <div data-address-fields class="mb-5">
                  <div class="sm:grid sm:grid-cols-2 sm:space-x-8">
                    <div class="input-holder">
                      <label for="AddressFirstNameNew" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.first_name' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[first_name]"
                        id="AddressFirstNameNew"
                        value="{{ form.first_name }}"
                        autocapitalize="words"
                      >
                    </div>
                    <div class="input-holder">
                      <label for="AddressLastNameNew" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.last_name' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[last_name]"
                        id="AddressLastNameNew"
                        value="{{ form.last_name }}"
                        autocapitalize="words"
                      >
                    </div>
                  </div>
                  <div class="input-holder">
                    <label for="AddressCompanyNew" class="base-secondary-text inline-block mb-1">
                      {{ 'customer.addresses.company' | t }}
                    </label>
                    <input
                      type="text"
                      name="address[company]"
                      id="AddressCompanyNew"
                      value="{{ form.company }}"
                      autocapitalize="words"
                    >
                  </div>
                  <div class="input-holder">
                    <label for="AddressAddress1New" class="base-secondary-text inline-block mb-1">
                      {{ 'customer.addresses.address1' | t }}
                    </label>
                    <input
                      type="text"
                      name="address[address1]"
                      id="AddressAddress1New"
                      value="{{ form.address1 }}"
                      autocapitalize="words"
                    >
                  </div>
                  <div class="input-holder">
                    <label for="AddressAddress2New" class="base-secondary-text inline-block mb-1">
                      {{ 'customer.addresses.address2' | t }}
                    </label>
                    <input
                      type="text"
                      name="address[address2]"
                      id="AddressAddress2New"
                      value="{{ form.address2 }}"
                      autocapitalize="words"
                    >
                  </div>
                  <div class="sm:grid sm:grid-cols-2 sm:space-x-8">
                    <div class="input-holder">
                      <label for="AddressCityNew" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.city' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[city]"
                        id="AddressCityNew"
                        value="{{ form.city }}"
                        autocapitalize="words"
                      >
                    </div>
                    <div class="input-holder">
                      <label for="AddressCountryNew" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.country' | t }}
                      </label>
                      <select
                        data-address-country
                        name="address[country]"
                        id="AddressCountryNew"
                        data-default="{{ form.country }}"
                      ></select>
                    </div>
                  </div>
                  <div class="input-holder" data-address-province-wrapper>
                    <label for="AddressProvinceNew" class="base-secondary-text inline-block mb-1">
                      {{ 'customer.addresses.province' | t }}
                    </label>
                    <select
                      id="AddressProvinceNew"
                      name="address[province]"
                      data-default="{{ form.province }}"
                    ></select>
                  </div>
                  <div class="input-holder">
                    <label for="AddressZipNew" class="base-secondary-text inline-block mb-1">
                      {{ 'customer.addresses.zip' | t }}
                    </label>
                    <input
                      type="text"
                      name="address[zip]"
                      id="AddressZipNew"
                      value="{{ form.zip }}"
                      autocapitalize="characters"
                    >
                  </div>
                  <div class="input-holder">
                    <label for="AddressPhoneNew" class="base-secondary-text inline-block mb-1">
                      {{ 'customer.addresses.phone' | t }}
                    </label>
                    <input
                      type="tel"
                      name="address[phone]"
                      id="AddressPhoneNew"
                      value="{{ form.phone }}"
                      pattern="[0-9\-]*"
                    >
                  </div>
                </div>
                <div class="custom-input custom-input--square-with-text mb-8 md:mb-10">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_new" class="custom-label inline-flex items-center align-top">
                    <span class="custom-label__check"></span>
                    {{ 'customer.addresses.set_default' | t }}
                  </label>
                </div>
                <div class="-mb-5 sm:grid sm:grid-flow-col sm:auto-cols-max sm:gap-8 sm:mb-0">
                  <div class="mb-5 sm:mb-0">
                    <button class="button w-100 sm:w-auto" type="submit">
                      {{ 'customer.addresses.add' | t }}
                    </button>
                  </div>
                  <div class="mb-5 sm:mb-0">
                    <button
                      class="button button--secondary w-100 sm:w-auto"
                      type="button"
                      data-address-toggle
                    >
                      {{ 'customer.addresses.cancel' | t }}
                    </button>
                  </div>
                </div>
              {% endform %}
            </div>
          </div>
          {% for address in customer.addresses %}
            <div data-address class="open-close__account account__customer-addresses">
              {% if address == customer.default_address %}
                <div class="h6 mb-6">{{ 'customer.addresses.default' | t }}</div>
              {% endif %}
              <div class="account__holder-box">
                <div class="rte mb-4 md:mb-10">
                  {{ address | format_address }}
                </div>
                <div class="grid grid-flow-col auto-cols-max gap-5 md:gap-8">
                  <div>
                    <button class="button button--sm" type="button" data-address-toggle>
                      {{ 'customer.addresses.edit' | t }}
                    </button>
                  </div>
                  <div>
                    <form
                      data-address-delete-form
                      method="post"
                      action="/account/addresses/{{ address.id }}"
                      data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
                    >
                      <input type="hidden" name="_method" value="delete">
                      <button class="button button--sm button--secondary" type="submit">
                        {{ 'customer.addresses.delete' | t }}
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <div data-address-form class="hidden">
                {% form 'customer_address', address, class: 'account-form account-form--address pt-10 md:py-10' %}
                  <h3 class="h6 mb-6">{{ 'customer.addresses.edit_address' | t }}</h3>
                  <div data-address-fields class="mb-5">
                    <div class="sm:grid sm:grid-cols-2 sm:space-x-8">
                      <div class="input-holder">
                        <label for="AddressFirstName_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                          {{ 'customer.addresses.first_name' | t }}
                        </label>
                        <input
                          type="text"
                          name="address[first_name]"
                          id="AddressFirstName_{{ form.id }}"
                          value="{{ form.first_name }}"
                          autocapitalize="words"
                        >
                      </div>
                      <div class="input-holder">
                        <label for="AddressLastName_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                          {{ 'customer.addresses.last_name' | t }}
                        </label>
                        <input
                          type="text"
                          name="address[last_name]"
                          id="AddressLastName_{{ form.id }}"
                          value="{{ form.last_name }}"
                          autocapitalize="words"
                        >
                      </div>
                    </div>
                    <div class="input-holder">
                      <label for="AddressCompany_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.company' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[company]"
                        id="AddressCompany_{{ form.id }}"
                        value="{{ form.company }}"
                        autocapitalize="words"
                      >
                    </div>
                    <div class="input-holder">
                      <label for="AddressAddress1_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.address1' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[address1]"
                        id="AddressAddress1_{{ form.id }}"
                        value="{{ form.address1 }}"
                        autocapitalize="words"
                      >
                    </div>
                    <div class="input-holder">
                      <label for="AddressAddress2_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.address2' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[address2]"
                        id="AddressAddress2_{{ form.id }}"
                        value="{{ form.address2 }}"
                        autocapitalize="words"
                      >
                    </div>
                    <div class="sm:grid sm:grid-cols-2 sm:space-x-8">
                      <div class="input-holder">
                        <label for="AddressCity_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                          {{ 'customer.addresses.city' | t }}
                        </label>
                        <input
                          type="text"
                          name="address[city]"
                          id="AddressCity_{{ form.id }}"
                          value="{{ form.city }}"
                          autocapitalize="words"
                        >
                      </div>
                      <div class="input-holder">
                        <label for="AddressCountry_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                          {{ 'customer.addresses.country' | t }}
                        </label>
                        <select
                          data-address-country
                          name="address[country]"
                          id="AddressCountry_{{ form.id }}"
                          class="address-country-option"
                          data-form-id="{{ form.id }}"
                          data-default="{{ form.country }}"
                        ></select>
                      </div>
                    </div>
                    <div class="input-holder" id="AddressProvinceContainer_{{ form.id }}" data-address-province-wrapper>
                      <label for="AddressProvince_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.province' | t }}
                      </label>
                      <select
                        data-address-province
                        class="address-province-option"
                        name="address[province]"
                        id="AddressProvince_{{ form.id }}"
                        data-default="{{ form.province }}"
                      ></select>
                    </div>
                    <div class="input-holder">
                      <label for="AddressZip_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.zip' | t }}
                      </label>
                      <input
                        type="text"
                        name="address[zip]"
                        id="AddressZip_{{ form.id }}"
                        value="{{ form.zip }}"
                        autocapitalize="characters"
                      >
                    </div>
                    <div class="input-holder">
                      <label for="AddressPhone_{{ form.id }}" class="base-secondary-text inline-block mb-1">
                        {{ 'customer.addresses.phone' | t }}
                      </label>
                      <input
                        type="tel"
                        name="address[phone]"
                        id="AddressPhone_{{ form.id }}"
                        value="{{ form.phone }}"
                        pattern="[0-9\-]*"
                      >
                    </div>
                  </div>
                  <div class="custom-input custom-input--square-with-text mb-8 md:mb-10">
                    {{ form.set_as_default_checkbox }}
                    <label
                      for="address_default_address_{{ form.id }}"
                      class="custom-label inline-flex items-center align-top"
                    >
                      <span class="custom-label__check"></span>
                      {{ 'customer.addresses.set_default' | t }}
                    </label>
                  </div>
                  <div class="-mb-5 sm:grid sm:grid-flow-col sm:auto-cols-max sm:gap-8 sm:mb-0">
                    <div class="mb-5 sm:mb-0">
                      <button
                        class="button w-100 sm:w-auto"
                        type="submit"
                      >
                        {{ 'customer.addresses.update' | t }}
                      </button>
                    </div>
                    <div class="mb-5 sm:mb-0">
                      <button
                        class="button button--secondary w-100 sm:w-auto"
                        type="button"
                        data-address-toggle
                        data-form-id="{{ form.id }}"
                      >
                        {{ 'customer.addresses.cancel' | t }}
                      </button>
                    </div>
                  </div>
                {% endform %}
              </div>
            </div>
          {% endfor %}
          {% if paginate.pages > 1 %}
            <div class="pt-6">
              {% render 'pagination' %}
            </div>
          {% endif %}
        {% endpaginate %}
      </div>
    </div>
  </div>
</div>
