<div class="section page-section" id="content" tabindex="0">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-lg-8 mx-md-auto">
        <div class="text-center">
          <h1 class="h2 mb-2">{{ 'customer.account.title' | t }}</h1>
          <p>
						<a href="/account">{{ 'customer.account.return' | t }}</a>
          </p>
          <button type="button" class="button-add-new-address" data-address-toggle>{{ 'customer.addresses.add_new' | t }}</button>
        </div>
				{% paginate customer.addresses by 5 %}
					<div data-address class="mb-4">
						<div data-address-form class="hidden">
							{% form 'customer_address', customer.new_address, class: 'account-form mx-0' %}
								<div class="pt-4">
									<h2>{{ 'customer.addresses.add_new' | t }}</h2>
								</div>
								<div data-address-fields>
									<div class="input-holder">
										<label for="AddressFirstNameNew">
											{{ 'customer.addresses.first_name' | t }}
										</label>
										<input type="text"
													name="address[first_name]"
													id="AddressFirstNameNew"
													value="{{ form.first_name }}"
													autocapitalize="words">
									</div>
									<div class="input-holder">
										<label for="AddressLastNameNew">
											{{ 'customer.addresses.last_name' | t }}
										</label>
										<input type="text"
													name="address[last_name]"
													id="AddressLastNameNew"
													value="{{ form.last_name }}"
													autocapitalize="words">
									</div>
									<div class="input-holder">
										<label for="AddressCompanyNew">
											{{ 'customer.addresses.company' | t }}
										</label>
										<input type="text"
													name="address[company]"
													id="AddressCompanyNew"
													value="{{ form.company }}"
													autocapitalize="words">
									</div>
									<div class="input-holder">
										<label for="AddressAddress1New">
											{{ 'customer.addresses.address1' | t }}
										</label>
										<input type="text"
													name="address[address1]"
													id="AddressAddress1New"
													value="{{ form.address1 }}"
													autocapitalize="words">
									</div>
									<div class="input-holder">
										<label for="AddressAddress2New">
											{{ 'customer.addresses.address2' | t }}
										</label>
										<input type="text"
													name="address[address2]"
													id="AddressAddress2New"
													value="{{ form.address2 }}"
													autocapitalize="words">
									</div>
									<div class="input-holder">
										<label for="AddressCityNew">
											{{ 'customer.addresses.city' | t }}
										</label>
										<input type="text"
													name="address[city]"
													id="AddressCityNew"
													value="{{ form.city }}"
													autocapitalize="words">
									</div>
									<div class="input-holder">
										<label for="AddressCountryNew">
											{{ 'customer.addresses.country' | t }}
										</label>
										<select data-address-country
											name="address[country]"
											id="AddressCountryNew"
											data-default="{{ form.country }}">
										</select>
									</div>
									<div class="input-holder" data-address-province-wrapper>
										<label for="AddressProvinceNew">
											{{ 'customer.addresses.province' | t }}
										</label>
										<select data-address-province
											name="address[province]"
											id="AddressProvinceNew"
											data-default="{{ form.province }}">
										</select>
									</div>
									<div class="input-holder">
										<label for="AddressZipNew">
											{{ 'customer.addresses.zip' | t }}
										</label>
										<input type="text"
													name="address[zip]"
													id="AddressZipNew"
													value="{{ form.zip }}"
													autocapitalize="characters">
									</div>
									<div class="input-holder">
										<label for="AddressPhoneNew">
											{{ 'customer.addresses.phone' | t }}
										</label>
										<input type="tel"
													name="address[phone]"
													id="AddressPhoneNew"
													value="{{ form.phone }}"
													pattern="[0-9\-]*">
									</div>
								</div>
								<div class="input-holder">
									{{ form.set_as_default_checkbox }}
									<label for="address_default_address_new">
										{{ 'customer.addresses.set_default' | t }}
									</label>
								</div>
								<div class="open-close__account">
									<div class="input-holder">
										<button type="submit">{{ 'customer.addresses.add' | t }}</button>
									</div>
									<button type="button" data-address-toggle>
										{{ 'customer.addresses.cancel' | t }}
									</button>
								</div>
							{% endform %}
						</div>
					</div>
					<h2 class="mb-4">{{ 'customer.addresses.title' | t }}</h2>
					<div class="row">
						{% for address in customer.addresses %}
						<div class="col-md-6 col-lg-4">
							<div data-address class="open-close__account account__customer-addresses">
								{% if address == customer.default_address %}
									<div class="h5 mb-3">{{ 'customer.addresses.default' | t }}</div>
								{% endif %}
								{{ address | format_address }}
								<div class="input-holder">
									<button type="button" data-address-toggle>
										{{ 'customer.addresses.edit' | t }}
									</button>
								</div>
								<form class="mb-4" data-address-delete-form method="post" action="/account/addresses/{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
									<input type="hidden" name="_method" value="delete"/>
									<button type="submit">
										{{ 'customer.addresses.delete' | t }}
									</button>
								</form>
								<div data-address-form class="hidden">
									{% form 'customer_address', address, class: 'account-form mx-0' %}
									<h4 class="mb-4">{{ 'customer.addresses.edit_address' | t }}</h4>
									<div data-address-fields class="address-form">
										<div class="input-holder">
											<label for="AddressFirstName_{{ form.id }}">
												{{ 'customer.addresses.first_name' | t }}
											</label>
											<input type="text"
														name="address[first_name]"
														id="AddressFirstName_{{ form.id }}"
														value="{{ form.first_name }}"
														autocapitalize="words">
										</div>
										<div class="input-holder">
											<label for="AddressLastName_{{ form.id }}">
												{{ 'customer.addresses.last_name' | t }}
											</label>
											<input type="text"
														name="address[last_name]"
														id="AddressLastName_{{ form.id }}"
														value="{{ form.last_name }}"
														autocapitalize="words">
										</div>
										<div class="input-holder">
											<label for="AddressCompany_{{ form.id }}">
												{{ 'customer.addresses.company' | t }}
											</label>
											<input type="text"
														name="address[company]"
														id="AddressCompany_{{ form.id }}"
														value="{{ form.company }}"
														autocapitalize="words">
										</div>
										<div class="input-holder">
											<label for="AddressAddress1_{{ form.id }}">
												{{ 'customer.addresses.address1' | t }}
											</label>
											<input type="text"
														name="address[address1]"
														id="AddressAddress1_{{ form.id }}"
														value="{{ form.address1 }}"
														autocapitalize="words">
										</div>
										<div class="input-holder">
											<label for="AddressAddress2_{{ form.id }}">
												{{ 'customer.addresses.address2' | t }}
											</label>
											<input type="text"
														name="address[address2]"
														id="AddressAddress2_{{ form.id }}"
														value="{{ form.address2 }}"
														autocapitalize="words">
										</div>
										<div class="input-holder">
											<label for="AddressCity_{{ form.id }}">
												{{ 'customer.addresses.city' | t }}
											</label>
											<input type="text"
														name="address[city]"
														id="AddressCity_{{ form.id }}"
														value="{{ form.city }}"
														autocapitalize="words">
										</div>
										<div class="input-holder">
											<label for="AddressCountry_{{ form.id }}">
												{{ 'customer.addresses.country' | t }}
											</label>
											<select data-address-country
												name="address[country]"
												id="AddressCountry_{{ form.id }}"
												class="address-country-option"
												data-form-id="{{ form.id }}"
												data-default="{{ form.country }}">
											</select>
										</div>
										<div class="input-holder" id="AddressProvinceContainer_{{ form.id }}" data-address-province-wrapper>
											<label for="AddressProvince_{{ form.id }}">
												{{ 'customer.addresses.province' | t }}
											</label>
											<select data-address-province
												name="address[province]"
												id="AddressProvince_{{ form.id }}"
												data-default="{{ form.province }}">
											</select>
										</div>
										<div class="input-holder">
											<label for="AddressZip_{{ form.id }}">
												{{ 'customer.addresses.zip' | t }}
											</label>
											<input type="text"
														name="address[zip]"
														id="AddressZip_{{ form.id }}"
														value="{{ form.zip }}"
														autocapitalize="characters">
										</div>
										<div class="input-holder">
											<label for="AddressPhone_{{ form.id }}">
												{{ 'customer.addresses.phone' | t }}
											</label>
											<input type="tel"
														name="address[phone]"
														id="AddressPhone_{{ form.id }}"
														value="{{ form.phone }}"
														pattern="[0-9\-]*">
										</div>
									</div>
									<div class="input-holder">
										{{ form.set_as_default_checkbox }}
										<label for="address_default_address_{{ form.id }}">
											{{ 'customer.addresses.set_default' | t }}
										</label>
									</div>
									<div class="input-holder">
										<button type="submit">{{ 'customer.addresses.update' | t }}</button>
									</div>
									<button type="button" data-address-toggle data-form-id="{{ form.id }}">
										{{ 'customer.addresses.cancel' | t }}
									</button>
									{% endform %}
								</div>
							</div>
						</div>
						{% endfor %}
					</div>

					{% if paginate.pages > 1 %}
						{% include 'pagination' %}
					{% endif %}

				{% endpaginate %}
			</div>
		</div>
	</div>
</div>
