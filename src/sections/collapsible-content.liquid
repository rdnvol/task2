<section class="section">
  <div class="container">
    <div class="xl:flex xl:justify-center">
      <div class="md:overflow-hidden xl:w-10/12">
        {% if section.settings.heading != blank or section.settings.title != blank %}
          <div class="mb-10 text-center">
            {% if section.settings.heading != blank %}
              <div class="link base-secondary-text mb-4 md:mb-2">{{ section.settings.heading }}</div>
            {% endif %}
            {% if section.settings.title != blank %}
              <h2 class="h5 mb-4 md:mb-2">{{ section.settings.title }}</h2>
            {% endif %}
          </div>
        {% endif %}
        <div class="md:-mx-4 md:flex md:items-start {{ section.settings.image_align }}">
          {%- if section.settings.image != blank -%}
            <div class="collapsible-item__img md:w-6/12 md:shrink-0 md:px-4">
              {%
                render 'image',
                class: 'md:rounded-md',
                src:  section.settings.image,
                m: '360x240',
                src_d:  section.settings.image,
                d: '572x460',
                alt: 'image-description'
              %}
            </div>
          {% endif %}
          {%- if section.blocks.size > 0 -%}
            <div class="md:w-100 md:px-4">
              {% for block in section.blocks %}
                <div
                  class="collapsible-item {{ block.id }}"
                  {{ block.shopify_attributes }}
                >
                  <details-utils
                    animate
                    {% if forloop.first and section.settings.open_first_block %}
                      force-open
                    {% endif %}
                  >
                    <details>
                      <summary class="collapsible-item__opener flex items-center py-3 pr-6">
                        {%- render 'icon', icon: 'checkmark' -%}
                        {{ block.settings.subtitle }}
                        {%- render 'icon', icon: 'caret' -%}
                      </summary>
                      {% if block.settings.richtext != blank %}
                        <div class="rte body-large overflow-hidden pb-3">
                          {{ block.settings.richtext }}
                        </div>
                      {% endif %}
                    </details>
                  </details-utils>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collapsible content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Collapsible content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Caption"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image layout"
    },
    {
      "type": "checkbox",
      "id": "open_first_block",
      "label": "Open first block",
      "default": true
    },
    {
      "type": "select",
      "id": "image_align",
      "label": "Desktop layout",
      "options": [
        {
          "value": "md:flex-row-reverse",
          "label": "Image second"
        },
        {
          "value": "",
          "label": "Image first"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Collapsible row heading",
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "default": "Collapsible row heading",
          "label": "Block title"
        },
        {
          "type": "richtext",
          "id": "richtext",
          "default": "<p>Text</p>",
          "label": "Richtext"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collapsible content",
      "category": "Image",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
