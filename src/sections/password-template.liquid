{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}

{% layout 'password' %}

<div class="password-section">
  <div class="password-section__holder">
    <div class="password-section__logo">
      <img src="{{ 'logo.png' | asset_url }}" alt="logo">
    </div>
    {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      <div class="md:flex md:items-center">
        <input type="password"
          name="password"
          required
          placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
        <button type="submit" class="button" name="commit">
          <strong>
            {{ 'general.password_page.login_form_submit' | t }}
          </strong>
        </button>
      </div>
    {% endform %}
    <p>{{ 'general.password_page.admin_link_html' | t }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Password"
}
{% endschema %}
