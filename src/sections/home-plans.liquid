{% render 'section-plans', title: section.settings.title, text: section.settings.text %}

{% schema %}
{
  "name": "Plans",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Choose your plan"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Body text",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore.</p>"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Plan",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "enable_lazyload",
          "label": "Enable lazyload",
          "default": true
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subheading",
          "default": "Internet"
        },
        {
          "type": "html",
          "id": "features",
          "label": "Features",
          "default": "<ul class=\"plan-item__list list-checks text-left\">\n<li>Up to 50Mbps</li>\n<li>Night Turbo-Speed</li>\n<li>WiFi router</li>\n<li>Unlimited devices</li>\n</ul>"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$24.99"
        },
        {
          "type": "text",
          "id": "period",
          "label": "Period",
          "default": "month"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link",
          "info": "Button is disabled if empty"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "button"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Plans",
      "category": "Text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
