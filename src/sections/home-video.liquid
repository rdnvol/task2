{% if section.settings.image != blank %}
  {% assign image = section.settings.image | image_url: width: 5760 %}
{% else %}
  {% assign image = 'img-placeholder.png' | asset_url %}
{% endif %}
<div
  class="pb-10 pt-0"
  data-section-type="video"
  data-section-id="{{ section.id }}"
>
  <div class="container">
    <div class="background-video-wrapper {{ section.settings.height }} relative">
      <video
        class="js-player"
        playsinline
        autoplay
        loop
        muted
        data-poster="{{ image }}"
      >
        <source
          src="{{ section.settings.video | default: "https://d2ezlykacdqcnj.cloudfront.net/_assets/home-video/beach-waves-loop.mp4" }}"
          type="video/mp4"
        >
      </video>
      <div class="video-text-block">
        <div class="flex h-100 items-center justify-center text-center">
          <div class="video-text-block__holder sm:w-10/12 md:w-6/12 lg:w-4/12 {{ section.settings.text_color }}">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'title' %}
                  {% if block.settings.text_size == 'medium' %}
                    <h2 {{ block.shopify_attributes }}>{{ block.settings.title }}</h2>
                  {% else %}
                    <h2
                      class="h1"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.title }}
                    </h2>
                  {% endif %}
                {% when 'subheading' %}
                  <div
                    class="mb-4"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.subheading }}
                  </div>
                {% when 'button' %}
                  {% if block.settings.button_link != blank and block.settings.button_label != blank %}
                    {%
                      render 'button',
                      element: 'a',
                      href: block.settings.button_link,
                      text: block.settings.button_label,
                    %}
                  {% endif %}
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Poster image"
    },
    {
      "type": "url",
      "id": "video",
      "label": "Video link",
      "info": "Only direct links to mp4 files"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Video height",
      "default": "",
      "options": [
        {
          "value": "background-video-wrapper--small",
          "label": "Small"
        },
        {
          "value": "",
          "label": "Medium"
        },
        {
          "value": "background-video-wrapper--large",
          "label": "Large"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "",
      "options": [
        {
          "value": "customizable-base-text",
          "label": "White"
        },
        {
          "value": "",
          "label": "Black"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text size",
          "default": "medium",
          "options": [
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ]
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link",
          "info": "Button is disabled if empty"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Button"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video",
      "category": "Video",
      "blocks": [
        {
          "type": "subheading"
        },
        {
          "type": "title"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
