      <div class="col-md-6">
        <h1 class="product__title">{{ product.title }}</h1>
        <div class="product__vendor mb-1 mb-md-2">{{ product.vendor }}</div>
        <form method="post" action="/cart/add" id="product_form_1740858196035" accept-charset="UTF-8" class="shopify-product-form" enctype="multipart/form-data" data-product-form="" data-product-handle="example-product-title-1" data-enable-history-state="true"><input type="hidden" name="form_type" value="product"><input type="hidden" name="utf8" value="âœ“">
          <div class="product__price" data-price-wrapper>
            <div class="product__price__box d-flex flex-wrap align-items-center">
              <div data-product-price>
                $41.00
              </div>
              {% if product.compare_at_price_max > product.price %}
                <span class="accessibility" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
                <del data-compare-price>
                  {% if current_variant.compare_at_price > current_variant.price %}
                    {{ current_variant.compare_at_price | money }}
                  {% endif %}
                </del>
              {% endif %}
            </div>
            <div class="product__price__text">
              <p>Tax included.</p>
            </div>
          </div>
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              <div class="js">
                {% if forloop.index0 > 0 %}
                  {% for value in option.values %}
                    <input type="radio" id="Option{{ option.position }}-{{ value }}" name="options[{{ option.name }}]" value="{{ value }}"{% if option.selected_value == value %} checked{% endif %}>
                    <label for="Option{{ option.position }}-{{ value }}">{{ value }}</label>
                  {% endfor %}
                {% else %}
                  <label for="Option{{ option.position }}">
                    {{ option.name }}
                  </label>
                  {% comment %}<select
                    id="Option{{ option.position }}"
                    name="options[{{ option.name | escape }}]">
                    {% for value in option.values %}
                      <option
                        value="{{ value | escape }}"
                        {% if option.selected_value == value %}selected="selected"{% endif %}>
                        {{ value }}
                      </option>
                    {% endfor %}
                  </select>{% endcomment %}
                {% endif %}
              </div>
            {% endfor %}
          {% endunless %}
          <div class="product__row">
            <div class="row mb-2">
              <div class="col-sm-6">
                <label class="product__label" for="size">Size</label>
                <select name="id" id="size" class="product__select w-100">
                  {% for variant in product.variants %}
                    <option
                      {% if variant == current_variant %}selected="selected"{% endif %}
                      {% unless variant.available %}disabled="disabled"{% endunless %}
                      value="{{ variant.id }}">
                      {{ variant.title }}
                    </option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div>
              <label class="product__label" for="Quantity">{{ 'products.product.quantity' | t }}</label>
              <input type="number" id="Quantity" name="quantity" value="1" min="1">
