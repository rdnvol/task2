{%- assign collection = collections[section.settings.collection] -%}

	{% case section.settings.grid %}
		{% when 2 %}
			{%- assign max_height = 530 -%}
			{%- assign grid_item_width = 'col-sm-6 col-lg-6' -%}
		{% when 3 %}
			{%- assign max_height = 345 -%}
			{%- assign grid_item_width = 'col-sm-6 col-lg-4' -%}
		{% when 4 %}
			{%- assign max_height = 250 -%}
			{%- assign grid_item_width = 'col-sm-6 col-lg-3' -%}
	{% endcase %}

	{%- assign product_limit = section.settings.grid | times: section.settings.rows -%}

<div class="section">
	<div class="container">
		<h2 class="text-center">Featured collection</h2>
		<div class="row">
			{% for product in collection.products limit: product_limit %}
			{% include "product-card", product:product %}
			{% else %}
				{% for i in (1..product_limit) %}
					{% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
					{% include "product-card--empty", index:current %}
				{% endfor %}
			{% endfor %}
		</div>
		{%- if section.settings.show_view_all -%}
			<div class="pt-sm-4 text-center">
				<a href="{{ collection.url }}" class="button">{{ 'collections.general.view_all' | t }}</a>
			</div>
		{%- endif -%}
	</div>
</div>

{% schema %}
{
	"name": "Featured collection",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Heading",
			"default": "Featured collection"
		},
		{
			"id": "collection",
			"type": "collection",
			"label": "Collection"
		},
		{
			"type": "range",
			"id": "grid",
			"label": "Products per row",
			"min": 2,
			"max": 4,
			"step": 1,
			"default": 4
		},
		{
			"type": "range",
			"id": "rows",
			"label": "Rows",
			"min": 1,
			"max": 5,
			"step": 1,
			"default": 2
		},
		{
			"type": "checkbox",
			"id": "show_view_all",
			"label": "Show 'View all' button",
			"default": true
		}
	],
	"presets": [
		{
			"name": "Featured collection",
			"category": "Collection"
		}
	]
}
{% endschema %}
