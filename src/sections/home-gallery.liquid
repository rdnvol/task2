<div class="section">
  <div class="gallery-section">
    <div class="row no-gutters">
      {% for block in section.blocks %}
        {%- capture image_position -%}
          style="{{ block.settings.alignment }}"
        {%- endcapture -%}
        <div class="col-md" {{ block.shopify_attributes }}>
          
          {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="gallery-section__link">
          {% else %}
          <div class="gallery-section__item">
          {% endif %}
          
            <div class="gallery-section__img {{ section.settings.height }}">
              {% if block.settings.image != blank %}
                {% render
                  'image',
                  src: block.settings.image,
                  d: '640x',
                  src_m: block.settings.image,
                  m: '375x',
                  data_attribute: image_position
                %}
               {% else %}
                 {{ 'image' | placeholder_svg_tag: "placeholder-svg" }}
              {% endif %}
            </div>
            {% if block.settings.title %}
              <div class="gallery-section__title text-white">
                <div class="h2 m-0">{{ block.settings.title }}</div>
              </div>
            {% endif %}
            
          {% if block.settings.link == blank %}
          </div>
          {% else %}
          </a>
          {% endif %}
          
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Gallery",
    "settings": [
      {
        "type": "select",
        "id": "height",
        "label": "Section height",
        "default": "",
        "options": [
          {
            "value": "",
            "label": "Extra small"
          },
          {
            "value": "gallery-section__img--sm",
            "label": "Small"
          },
          {
            "value": "gallery-section__img--md",
            "label": "Medium"
          },
          {
            "value": "gallery-section__img--lg",
            "label": "Large"
          },
          {
            "value": "gallery-section__img--xl",
            "label": "Extra large"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "limit": 4,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Image alignment",
            "default": "object-position: 50% 50%;",
            "options": [
              {
                "value": "object-position: 50% 0;",
                "label": "Top"
              },
              {
                "value": "object-position: 50% 50%;",
                "label": "Medium"
              },
              {
                "value": "object-position: 50% 100%;",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Caption",
            "default": "Heading"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Gallery",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
