{% liquid
  assign blocks_size = section.blocks.size

  case blocks_size
    when 1
      assign desktop_size = '1440x'
      assign mobile_size = '360x'
    when 2
      assign desktop_size = '720x'
      assign mobile_size = '360x'
    when 3
      assign desktop_size = '480x'
      assign mobile_size = '360x'
    when 4
      assign desktop_size = '360x'
      assign mobile_size = '360x'
  endcase
%}

{% if blocks_size > 0 %}
  <section class="section">
    <div class="gallery-section">
      <div class="md:grid md:grid-flow-col md:auto-cols-fr">
        {% for block in section.blocks %}
          {%- capture image_position -%}
            style="{{ block.settings.alignment }}"
          {%- endcapture -%}
          {% capture gallery_image %}
            {% liquid
              if block.settings.enable_lazyload
                assign enable_lazyload = true
              else
                assign enable_lazyload = false
              endif
            %}
            <div class="gallery-section__img {{ section.settings.height }}">
              {% if block.settings.image != blank %}
                {%
                  render 'image',
                  src: block.settings.image,
                  m: mobile_size,
                  src_d: block.settings.image,
                  d: desktop_size,
                  alt: block.settings.image.alt,
                  lazyload: enable_lazyload,
                  data_attribute: image_position
                %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: "placeholder-svg" }}
              {% endif %}
            </div>
          {% endcapture %}
          {% capture gallery_title %}
            {% if block.settings.title %}
              <div class="gallery-section__title customizable-base-text">
                <div class="h2">{{ block.settings.title }}</div>
              </div>
            {% endif %}
          {% endcapture %}
          <div {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="gallery-section__link">
                {{ gallery_image }}
                {{ gallery_title }}
              </a>
            {% else %}
              <div class="gallery-section__item">
                {{ gallery_image }}
                {{ gallery_title }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Gallery",
  "settings": [
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "default": "",
      "options": [
        {
          "value": "",
          "label": "Extra small"
        },
        {
          "value": "gallery-section__img--sm",
          "label": "Small"
        },
        {
          "value": "gallery-section__img--md",
          "label": "Medium"
        },
        {
          "value": "gallery-section__img--lg",
          "label": "Large"
        },
        {
          "value": "gallery-section__img--xl",
          "label": "Extra large"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "enable_lazyload",
          "label": "Enable lazyload",
          "default": true
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Image alignment",
          "default": "object-position: 50% 50%;",
          "options": [
            {
              "value": "object-position: 50% 0;",
              "label": "Top"
            },
            {
              "value": "object-position: 50% 50%;",
              "label": "Medium"
            },
            {
              "value": "object-position: 50% 100%;",
              "label": "Bottom"
            }
          ]
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Caption",
          "default": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
