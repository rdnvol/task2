<div class="pt-6 pt-md-7">
  <div class="container">
    {% render 'breadcrumbs' %}
  </div>
</div>
<section data-section-id="{{ section.id }}" class="section page-section" data-section-type="product">
  <div class="container">
    <div class="product-main-block position-relative">
      <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">
          {% render 'product-gallery' %}
        </div>
        <div class="col-md-6">
          {% render 'product-main-block' %}
        </div>
      </div>
    </div>
  </div>
  {%- render 'cart-popup' -%}
</section>

{% render 'schema' %}

{% schema %}
  {
    "name": "Product pages",
    "settings": [
      {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show social sharing buttons",
      "default": true
      }
    ]
  }
{% endschema %}
