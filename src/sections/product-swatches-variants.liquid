{% if section.settings.show_breadcrumbs %}
  {% render "breadcrumbs" %}
{% endif %}
{% liquid
  render 'swatches-variants', product: product, enable_lazyload: section.settings.enable_lazyload
  render "schema"
%}

{% render 'product-model-script', product: product %}

{% schema %}
{
  "name": "Product Information",
  "settings": [
    {
      "type": "select",
      "id": "product_options_layout",
      "label": "Appearance of product options (other options except Color)",
      "default": "select",
      "options": [
        {
          "value": "select",
          "label": "Select"
        },
        {
          "value": "square_swatches",
          "label": "Square swatches"
        },
        {
          "value": "round_swatches",
          "label": "Round swatches"
        }
      ]
    },
    {
      "type": "select",
      "id": "product_option_color_layout",
      "label": "Appearance of product options (Color)",
      "default": "square_swatches",
      "options": [
        {
          "value": "square_swatches",
          "label": "Square swatches"
        },
        {
          "value": "round_swatches",
          "label": "Round swatches"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_lazyload",
      "label": "Enable lazyload",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_following_image",
      "label": "Show following image on mobile",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_variant_label",
      "label": "Show variant label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_size_chart",
      "label": "Show size chart",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "url",
      "id": "size_chart_url",
      "label": "Size chart url"
    },
    {
      "type": "select",
      "id": "swatches_color_type",
      "label": "Variants swatcher option",
      "default": "image",
      "options": [
        {
          "value": "metafields",
          "label": "Metafields"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "vendor",
      "name": "Vendor",
      "limit": 1
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Price",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "Variant picker",
      "limit": 1
    },
    {
      "type": "quantity_selector",
      "name": "Quantity selector",
      "limit": 1
    },
    {
      "type": "buy_buttons",
      "name": "Buy buttons",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_dynamic_checkout",
          "default": true,
          "label": "Show dynamic checkout",
          "info": "Using the payment methods available on your store, customers see their preferred option, like PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1
    },
    {
      "type": "share",
      "name": "Social sharing buttons",
      "limit": 1
    },
    {
      "type": "complementary",
      "name": "Complementary products",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "block_heading",
          "default": "Pairs well with",
          "label": "Heading"
        },
        {
          "type": "range",
          "id": "product_list_limit",
          "min": 1,
          "max": 10,
          "step": 1,
          "default": 10,
          "label": "Maximum products to show"
        },
        {
          "type": "range",
          "id": "products_per_page",
          "min": 1,
          "max": 4,
          "step": 1,
          "default": 3,
          "label": "Number of products per page"
        }
      ]
    },
    {
      "type": "custom_liquid",
      "name": "Custom Liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "Custom Liquid"
        }
      ]
    }
  ]
}
{% endschema %}
