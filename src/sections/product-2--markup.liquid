      <div class="col-12 mb-4 px-0 d-md-none">
        <div class="product-gallery-mobile">
          <div class="product-gallery-mobile__img">
            {% render
              'image',
              asset_img_url: true,
              src: 'img-placeholder.png',
              d: '375x',
              placeholder: 'img-placeholder.png'
            %}
          </div>
