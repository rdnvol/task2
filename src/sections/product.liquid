{% if section.settings.show_breadcrumbs %}
  {% render 'breadcrumbs' %}
{% endif %}
{% liquid
  render 'product', product: product, enable_lazyload: section.settings.enable_lazyload, first_image_eager: true
  render 'schema'
%}

<script type="application/json" id="product-json">
  {% render 'product-json' %}
</script>

{% render 'product-model-script', product: product %}

{% schema %}
{
  "name": "Product Information",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_variant_label",
      "label": "Show variant label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_lazyload",
      "label": "Enable lazyload",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_size_chart",
      "label": "Show size chart",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_following_image",
      "label": "Show following image",
      "default": true
    },
    {
      "type": "url",
      "id": "size_chart_url",
      "label": "Size chart url"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "vendor",
      "name": "Vendor",
      "limit": 1
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Price",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "Variant picker",
      "limit": 1
    },
    {
      "type": "quantity_selector",
      "name": "Quantity selector",
      "limit": 1
    },
    {
      "type": "buy_buttons",
      "name": "Buy buttons",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_dynamic_checkout",
          "default": true,
          "label": "Show dynamic checkout",
          "info": "Using the payment methods available on your store, customers see their preferred option, like PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1
    },
    {
      "type": "share",
      "name": "Social sharing buttons",
      "limit": 1
    },
    {
      "type": "accordion",
      "name": "Accordion",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "pairs_heading",
          "label": "Heading",
          "default": "Pairs well with"
        },
        {
          "type": "range",
          "id": "pairs_max_product_count",
          "label": "Maximum products to show",
          "default": 1,
          "min": 0,
          "max": 10
        },
        {
          "type": "range",
          "id": "pairs_per_page",
          "label": "Number of products per page",
          "default": 1,
          "min": 0,
          "max": 10
        }
      ]
    }
  ]
}
{% endschema %}
