<div
  class="section {{ section.settings.section_padding }}"
  id="slideshow-section-{{ section.id }}"
  data-section-type="slideshow"
  data-section-id="{{ section.id }}"
  data-autorotate="{{ section.settings.enable_autorotate }}"
  data-blocks="{{ section.blocks.size }}"
  data-slides-every="{{ section.settings.change_every }}"
>
  <div
    class="splide slideshow-gallery"
    id="slideshow-gallery-{{ section.id }}"
  >
    <div class="splide__track">
      <div class="splide__list">
        {% for block in section.blocks %}
          <div
            class="splide__slide"
            {{ block.shopify_attributes }}
            data-index="{{ forloop.index0 }}"
          >
            <div class="slideshow-gallery__img {{ section.settings.slide_height }}">
              {% if block.settings.image != blank %}
                {% liquid
                  if block.settings.enable_lazyload
                    assign enable_lazyload = true
                  else
                    assign enable_lazyload = false
                  endif
                %}
                {%
                  render 'image',
                  src: block.settings.image,
                  m: '360x',
                  src_d: block.settings.image,
                  d: '1440x',
                  alt: block.settings.image.alt,
                  lazyload: enable_lazyload
                %}
              {% else %}
                {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="slideshow-gallery__block">
              <div class="container relative h-100">
                <div class="flex h-100 {{ block.settings.alignment }} text-center">
                  <div class="sm:w-10/12 md:w-6/12 lg:w-4/12">
                    <div class="rte slideshow-gallery__text-block {{ section.settings.text_size }}">
                      {% if block.settings.title != blank %}
                        <div class="slideshow-gallery__title">{{ block.settings.title }}</div>
                      {% endif %}
                      {{ block.settings.text }}
                    </div>
                    {% if block.settings.button_link != blank and block.settings.button_label != blank %}
                      {%
                        render 'button',
                        href: block.settings.button_link,
                        text: block.settings.button_label,
                      %}
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            {% if section.settings.enable_overlay %}
              <div class="slideshow-gallery__overlay"></div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Slideshow",
  "settings": [
    {
      "type": "select",
      "id": "slide_height",
      "label": "Size height",
      "default": "",
      "options": [
        {
          "value": "slideshow-gallery__img--sm",
          "label": "Small"
        },
        {
          "value": "",
          "label": "Medium"
        },
        {
          "value": "slideshow-gallery__img--lg",
          "label": "large"
        }
      ]
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "Padding",
      "default": "",
      "options": [
        {
          "value": "",
          "label": "All paddings"
        },
        {
          "value": "section--without-padding",
          "label": "Remove all paddings"
        },
        {
          "value": "section--without-padding-top",
          "label": "Remove top padding"
        },
        {
          "value": "section--without-padding-bottom",
          "label": "Remove bottom padding"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "default": "",
      "options": [
        {
          "value": "",
          "label": "Medium"
        },
        {
          "value": "slideshow-gallery__text-block--lg",
          "label": "Large"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_autorotate",
      "label": "Auto-rotate slides",
      "default": false
    },
    {
      "type": "range",
      "id": "change_every",
      "min": 3,
      "max": 9,
      "step": 1,
      "label": "Change slides every",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "enable_lazyload",
          "label": "Enable lazyload",
          "default": true
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Text alignment",
          "default": "justify-center items-center",
          "options": [
            {
              "value": "justify-start items-start",
              "label": "Top left"
            },
            {
              "value": "justify-center items-start",
              "label": "Top center"
            },
            {
              "value": "justify-end items-start",
              "label": "Top right"
            },
            {
              "value": "justify-start items-center",
              "label": "Middle left"
            },
            {
              "value": "justify-center items-center",
              "label": "Middle center"
            },
            {
              "value": "justify-end items-center",
              "label": "Middle right"
            },
            {
              "value": "justify-start items-end",
              "label": "Bottom left"
            },
            {
              "value": "justify-center items-end",
              "label": "Bottom center"
            },
            {
              "value": "justify-end items-end",
              "label": "Bottom right"
            }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Body text",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Earum, sit?</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link",
          "info": "Button is disabled if empty"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
