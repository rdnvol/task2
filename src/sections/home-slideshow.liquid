          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "image_position",
            "label": "Image position",
            "default": "object-position: 50% 50%;",
            "options": [
              {
                "value": "object-position: 0 0;",
                "label": "Top left"
              },
              {
                "value": "object-position: 50% 0;",
                "label": "Top center"
              },
              {
                "value": "object-position: 100% 0;",
                "label": "Top right"
              },
              {
                "value": "object-position: 0% 50%;",
                "label": "Middle left"
              },
              {
